{
  "name": "bab",
  "version": "1.0.0",
  "description": "Byond Authentication Bridge",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && cp -r src/html dist/html",
    "nodemon": "NODE_OPTIONS=\"--loader ts-node/esm\" npx nodemon src/index.ts",
    "start": "NODE_OPTIONS=\"--loader ts-node/esm\" node src/index.ts",
    "devUpdateDb": "npx prisma format && npx prisma db push && npx prisma generate",
    "generateDbClient": "npx prisma generate",
    "buildDocker": "docker build . --secret id=npmrc,src=$HOME/.npmrc"
  },
  "keywords": [],
  "author": "alexkar598",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexkar598/bab.git"
  },
  "bugs": {
    "url": "https://github.com/alexkar598/bab/issues"
  },
  "homepage": "https://github.com/alexkar598/bab#readme",
  "dependencies": {
    "@alexkar598/bab-hub": "^1.3.0",
    "@prisma/client": "^5.22.0",
    "chalk": "^5.4.1",
    "cls-rtracer": "^2.6.3",
    "config": "^3.3.12",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "express-winston": "^4.2.0",
    "jose": "^6.0.8",
    "printable-characters": "^1.0.42",
    "string-to-color": "^2.2.2",
    "table": "^6.9.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@types/config": "^3.3.5",
    "@types/esm": "^3.2.2",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "nodemonConfig": {
    "delay": 3,
    "watch": [
      "src/",
      "config/",
      "types/",
      "node_modules/.prisma"
    ],
    "ext": "json,ts,js,prisma"
  }
}
